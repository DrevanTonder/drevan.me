---
import Navbar from '../components/Navbar.astro';

export interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<link rel="preconnect" href="https://fonts.googleapis.com">
		<link rel="preconnect" href="https://fonts.gstatic.com">
		<link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Lexend+Deca:wght@400;500;600;700&display=swap">
		<meta name="description" content="Andre van Tonder\'s personal site." />
		<title>{title}</title>
	</head>
	<body class="h-screen bg-[#1A1278]">
		<Navbar />
		<slot />
	</body>
</html>
